<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h4>SingIn</h4>
                </div>
                <div class="card-body">
                    <img src="https://www.iconpacks.net/icons/1/free-user-group-icon-296-thumb.png" alt="" class="card-img w-50 rounded-circle">
                    <form action="/signin" method="POST">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Ingrese su nombre de usuario" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Ingrese su password" class="form-control">
                        </div>
                        <button class="btn btn-success btn-block">Iniciar Sesion</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>