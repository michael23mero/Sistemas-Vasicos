<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h4>SingUp</h4>
                </div>
                <div class="card-body">
                    <form action="/createUser" method="POST">
                        <div class="form-group">
                            <input type="text" name="email" placeholder="Ingrese su direccion de email" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Ingrese su nombre de usuario" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" placeholder="Ingrese su password" class="form-control">
                        </div>
                        <button class="btn btn-success btn-block">Create</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>