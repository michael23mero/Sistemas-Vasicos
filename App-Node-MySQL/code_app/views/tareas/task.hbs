<div class="container mt-4">
    <div class="row">
        {{#each tareas}}
            <div class="col-md-3">
                <div class="card text-center p-2">
                    <div class="card-header p-4">
                        <h4>{{ titulo }}</h4>
                    </div>
                    <div class="card-body">
                        <p>{{ descripcion }}</p>
                        <p>{{ timeago fecha}}</p>
                    </div>
                    <div class="card-footer">
                        <a href="/tareas/deleteTask/{{ id }}" class="btn btn-danger btn-block">Delete</a>
                        <a href="/tareas/editTask/{{ id }}" class="btn btn-info btn-block">Update</a>
                    </div>
                </div>
            </div>
        {{else}}
        <div class="col-md-5 mx-auto">
            <div class="card card-body text-center p-4">
                <h5>No hay tareas guardadas aun</h5><hr>
                <a href="/tareas/createTask" class="btn btn-success">Crea uno xD</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>