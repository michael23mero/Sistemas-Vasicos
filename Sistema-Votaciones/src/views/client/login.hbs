{{#if alert }}
    <script>
        Swal.fire({
            text: '{{alertMessage}}',
            icon: '{{alertIcon}}',
            timer: '{{time}}'
        }).then(() =>{
            window.location='/{{ruta}}'
        })
    </script>
{{/if}}